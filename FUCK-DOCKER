FROM node:lts

WORKDIR /app

COPY ./dev/novasystem-app/package*.json ./

# Explicitly clean npm cache and reinstall dependencies
RUN npm cache clean --force && rm -rf node_modules package-lock.json && npm install @rollup/rollup-linux-x64-gnu && npm install

COPY ./dev/novasystem-app/ ./

CMD ["npm", "run", "dev"]
